@model Kursach.Models.Post

<div class="container">
    <h1>New post</h1>
    @Html.ValidationSummary()
    <form asp-action="AddPost" asp-controller="Campaign" method="post">

        <div class="registerdiv">
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Content" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextAreaFor(m => m.Content, new { placeholder = "Write text", @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12 btn-submit">
                <button type="submit" class="btn btn-success">Post</button>
            </div>
        </div>
    </form>
</div>
