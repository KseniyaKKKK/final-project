@model List<Post>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .post {
            display: block;
            border: solid thin;
            margin-top: 1%;
            padding-left: 2%;
            padding-top: 2%;
            border-radius: 1em;
        }
    </style>
</head>

<body>
    @foreach (var t in Model)
    {
        <div class="post">
            <h5><a asp-controller="Campaign" asp-action="CampaignSite" asp-route-id=@t.CampaignId>@t.Campaign.Name</a></h5>
            <p>@t.Content</p>
        </div>
    }
</body>
