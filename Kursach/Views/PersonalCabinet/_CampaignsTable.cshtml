@model Kursach.Models.User
@using Kursach.Controllers

<div>
    <h6>Your campaigns</h6>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Owner</th>
            <th>Wanted money</th>
            <th></th>
        </tr>
        @foreach (var t in PersonalCabinetController.context.Campaigns)
        {
            <tr>
                <td>@t.Name</td>
                <td>@t.Owner.Name</td>
                <td>@t.WantedMoney</td>
                <td><a asp-controller="Campaign" asp-action="CampaignSite" asp-route-id=@t.Id>Campaign site</a></td>
            </tr>
        }
    </table>
</div>
